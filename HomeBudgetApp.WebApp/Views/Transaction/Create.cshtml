@model HomeBudgetApp.WebApp.Models.TransactionCreateModel

@{
    ViewData["Title"] = "Create";
}
@section Style{
    <link rel="stylesheet" href="~/css/details.css" />
}
<h1 class="mt-2">New transaction</h1>
<hr />
<div class="row mb-5">
    <form asp-action="Create" class="payment">
        <div>
            <input hidden asp-for="AccountID" class="form-control" value="@Model.AccountID" />
            <label class="control-label">Type</label>
            <select asp-for="Transaction.Type" id="transaction-type" class="custom-select mb-3">
                @if (Model.Type == "income")
                {
                    <option value="expense">Expense</option>
                    <option value="income" selected>Income</option>
                }
                else
                {
                    <option value="expense" selected>Expense</option>
                    <option value="income">Income</option>
                }

            </select>
            <div class="form-group">
                <label asp-for="Transaction.DateTime" class="control-label">Date</label>
                <input type="date" asp-for="Transaction.DateTime" class="form-control" value="@Model.Now.ToString("yyyy-MM-dd")"/>
                <span asp-validation-for="Transaction.DateTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AccountNumber" class="control-label">From account</label>
                @if (Model.Type == "income")
                 {
                    <input required asp-for="AccountNumber" class="form-control" value="@Model.AccountNumber" id="account-number" />
                 }
                 else
                 {
                    <input asp-for="AccountNumber" class="form-control" value="@Model.AccountNumber" id="account-number" readonly />
                 }
                <span asp-validation-for="AccountNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RecipientAccountNumber" class="control-label">Recipient Account number</label>
                @if (Model.Type == "income")
                 {
                    <input asp-for="RecipientAccountNumber" class="form-control" id="recipient-number" readonly />
                 }
                 else
                 {
                    <input required asp-for="RecipientAccountNumber" class="form-control" id="recipient-number" />
                 }

                <span asp-validation-for="RecipientAccountNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Transaction.RecipientName" class="control-label">Recipient Name</label>
                <input required asp-for="Transaction.RecipientName" class="form-control" />
                <span asp-validation-for="Transaction.RecipientName" class="text-danger"></span>
            </div>
        </div>
        <div>
            <div class="form-group">
                <label asp-for="Transaction.RecipientAddress" class="control-label">Recipient Address</label>
                <input required asp-for="Transaction.RecipientAddress" class="form-control" />
                <span asp-validation-for="Transaction.RecipientAddress" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Transaction.Purpose" class="control-label"></label>
                <input required asp-for="Transaction.Purpose" class="form-control" />
                <span asp-validation-for="Transaction.Purpose" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Transaction.Model" class="control-label"></label>
                <input required asp-for="Transaction.Model" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Transaction.ReferenceNumber" class="control-label">Reference Number</label>
                <input required asp-for="Transaction.ReferenceNumber" class="form-control" />
                <span asp-validation-for="Transaction.ReferenceNumber" class="text-danger"></span>
            </div>
        </div>
        <div class="final-column">
            <div class="form-group">
                <label asp-for="Transaction.Amount" class="control-label"></label>
                <input required asp-for="Transaction.Amount" class="form-control" type="number" min="0"/>
            </div>
            <div class="form-group">
                <label class="control-label">Categories:</label>
                @Html.DropDownList("Category", Model.Categories, new { @class = "form-control", @id = "category-select" })
            </div>
            <button class="btn btn-primary" id="add-category">Add category</button>
            <table class="table" id="categories">
                <thead>
                    <tr>
                        <th>Num</th>
                        <th>Name</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                </tbody>
            </table>
            <div class="form-group create">
                <input type="checkbox" asp-for="CreateTemplate" class="custom-checkbox" /><label>Create Template?</label>
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </div>
    </form>
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
</div>
@section Scripts{
    <script>
        $('#transaction-type').change(function (e) {
            e.preventDefault();

            const type = $('#transaction-type').val();
            if (type === 'income') {
                $('#account-number').val("").attr('readonly', false);
                $('#recipient-number').val('@Model.AccountNumber').attr('readonly', true);
            } else {
                $('#account-number').val('@Model.AccountNumber').attr('readonly', true);
                $('#recipient-number').val("").attr('readonly', false);
            }
        })

        $('#add-category').click(function (e) {
            e.preventDefault();

            $.ajax({
                url: '@Url.ActionLink("AddCategory", "Transaction")',
                method: 'post',
                data: { CategoryID: $('#category-select').val(), Num: $('#categories tbody tr').length, OwnerID: @Model.AccountID },
                success: function (data) {
                    $('#categories tbody').append(data);
                },
                error: function () {
                    alert("Error");
                }
            });
        });

        function DeleteCategory(Num) {
            $("#categories tr").eq(Num+1).remove();
            location.reload();
        }
    </script>
}

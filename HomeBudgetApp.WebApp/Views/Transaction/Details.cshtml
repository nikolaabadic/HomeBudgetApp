@model HomeBudgetApp.WebApp.Models.TransactionDetailsModel

@{
    ViewData["Title"] = "Details";
}
@section Style{
    <link rel="stylesheet" href="~/css/details.css" />
}
<h1>Payment Details</h1>
<hr />

<div class="payment-details">
    <dl>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AccountNumber)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AccountNumber)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.RecipientNumber)
        </dt>
        </dd>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.RecipientNumber)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Transaction.RecipientName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Transaction.RecipientName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Transaction.RecipientAddress)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Transaction.RecipientAddress)
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Transaction.DateTime)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Transaction.DateTime)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Transaction.Purpose)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Transaction.Purpose)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Transaction.Model)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Transaction.Model)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Transaction.ReferenceNumber)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Transaction.ReferenceNumber)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Transaction.Amount)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Transaction.Amount)
        </dd>
    </dl>
    <div class="details-categories">
        @if (Model.Transaction.Categories == null || Model.Transaction.Categories.Count == 0)
        {
            <h3>This payment has no categories</h3>
        }
        else
        {
            <h3>Categories:</h3>
            foreach (var c in Model.Transaction.Categories)
            {
                foreach (var category in Model.Categories)
                {
                    if (c.CategoryID == category.CategoryID)
                    {
                        <h4>@category.Name</h4>
                    }
                }

            }
        }
    </div>
</div>




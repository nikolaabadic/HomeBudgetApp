@model HomeBudgetApp.WebApp.Models.TransactionCreateModel

@{
    ViewData["Title"] = "Edit";
}
@section Style{
    <link rel="stylesheet" href="~/css/details.css" />
}
<h1 class="mt-2">Edit Transaction</h1>
<hr />
<div class="row mb-5">
    <form asp-action="Edit" class="payment">
        <div>
            <div class="form-group">
                <label asp-for="Transaction.AccountNumber" class="control-label"> Account number</label>
                @if (Model.Transaction.AccountID == Model.OwnerID)
                {
                    <input readonly asp-for="Transaction.AccountNumber" class="form-control" value="@Model.Transaction.AccountNumber" />
                }
                else
                {
                    <input required asp-for="Transaction.AccountNumber" class="form-control" value="@Model.Transaction.AccountNumber" />
                }
                <span asp-validation-for="Transaction.AccountNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Transaction.RecipientAccountNumber" class="control-label">Recipient Account Number</label>
                @if (Model.Transaction.RecipientID == Model.OwnerID)
                {
                    <input readonly asp-for="Transaction.RecipientAccountNumber" class="form-control" value="@Model.Transaction.RecipientAccountNumber" />
                }
                else
                {
                    <input required asp-for="Transaction.RecipientAccountNumber" class="form-control" value="@Model.Transaction.RecipientAccountNumber" />
                }
                <span asp-validation-for="Transaction.RecipientAccountNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Transaction.DateTime" class="control-label">Date</label>
                <input type="date" asp-for="Transaction.DateTime" class="form-control" value="@Model.Transaction.DateTime.ToString("yyyy-MM-dd")" />
                <span asp-validation-for="Transaction.DateTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input hidden asp-for="AccountID" class="form-control" value="@Model.AccountID" />
                <input hidden asp-for="Transaction.TransactionID" class="form-control" value="@Model.Transaction.TransactionID" />
                <input hidden asp-for="Transaction.AccountID" class="form-control" value="@Model.Transaction.AccountID" />
                <input hidden asp-for="Transaction.RecipientID" class="form-control" value="@Model.Transaction.RecipientID" />
            </div>
            <div class="form-group">
                <label asp-for="Transaction.RecipientName" class="control-label">Recipient Name</label>
                <input required asp-for="Transaction.RecipientName" class="form-control" value="@Model.Transaction.RecipientName" />
                <span asp-validation-for="Transaction.RecipientName" class="text-danger"></span>
            </div>
        </div>
        <div>
            <div class="form-group">
                <label asp-for="Transaction.RecipientAddress" class="control-label">Recipient Address</label>
                <input required asp-for="Transaction.RecipientAddress" class="form-control" value="@Model.Transaction.RecipientAddress" />
                <span asp-validation-for="Transaction.RecipientAddress" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Transaction.Purpose" class="control-label"></label>
                <input required asp-for="Transaction.Purpose" class="form-control" value="@Model.Transaction.Purpose" />
                <span asp-validation-for="Transaction.Purpose" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Transaction.Model" class="control-label"></label>
                <input required asp-for="Transaction.Model" class="form-control" value="@Model.Transaction.Model" />
                <span asp-validation-for="Transaction.Model" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Transaction.ReferenceNumber" class="control-label">Reference Number</label>
                <input required asp-for="Transaction.ReferenceNumber" class="form-control" value="@Model.Transaction.ReferenceNumber" />
                <span asp-validation-for="Transaction.ReferenceNumber" class="text-danger"></span>
            </div>
        </div>
        <div class="final-column">
            <div class="form-group">
                <label asp-for="Transaction.Amount" class="control-label"></label>
                <input required asp-for="Transaction.Amount" class="form-control" value="@Model.Transaction.Amount" type="number" min="0"/>
                <span asp-validation-for="Transaction.Amount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Categories</label>
                @Html.DropDownList("Category", Model.Categories, new { @class = "form-control", @id = "category-select" })
            </div>
            <button class="btn btn-primary" id="add-category-edit">Add category</button>
            <table class="table" id="categories">
                <thead>
                    <tr>
                        <th>Num</th>
                        <th>Name</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Transaction.Categories)
                    {
                        <tr>
                            <td>@(Model.Transaction.Categories.IndexOf(item)+1)</td>
                            @foreach (var category in Model.CategoryList)
                            {
                                if (category.CategoryID == item.CategoryID)
                                {
                                    <td>@category.Name</td>
                                }
                            }
                            <td><a href="javascript:DeleteCategory(@Model.Transaction.TransactionID,@item.CategoryID,@item.OwnerID,@Model.Transaction.Categories.IndexOf(item))">
                                <i class="bi bi-x-circle" style="color:red;"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <div class="form-group d-flex justify-content-end">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </div>
    </form>
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
</div>
@section Scripts{
    <script>
        $('#add-category-edit').click(function (e) {
            e.preventDefault();

            $.ajax({
                url: '@Url.ActionLink("AddCategoryEdit", "Transaction")',
                method: 'post',
                data: {
                    CategoryID: parseInt($('#category-select').val()),
                    Num: parseInt($('#categories tbody tr').length),
                    OwnerID: @Model.OwnerID,
                    TransactionID: @Model.Transaction.TransactionID,
                    },
                success: function (data) {
                    $('#categories tbody').append(data);
                },
                error: function () {
                    alert("Error adding category.");
                }
            });
        });
        function DeleteCategory(PaymentID, CategoryID, OwnerID, Num) {
                $.ajax({
                    url: "@Url.Action("DeleteCategory","Transaction")" ,
                    type: 'Delete',
                    data: {
                        id: PaymentID,
                        categoryID: CategoryID,
                        ownerID: OwnerID
                    },
                    success: function () {
                        DeleteFromList(Num);
                    },
                    error: function (xhr) {
                        alert('error');
                    }
                });
        }
        function DeleteFromList(Num) {
            $("#categories tr").eq(Num + 1).remove();
            location.reload();
        }
    </script>
}
